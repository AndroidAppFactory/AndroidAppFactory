<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="share_bg_color">#A6000000</color>
    <color name="share_panel_color">#BF2D2D2B</color>
    <color name="share_text_color">#ADADAD</color>
    <dimen name="share_title_text_size">10dp</dimen>
    <dimen name="share_item_text_size">@dimen/share_title_text_size</dimen>

    <style name="shareItemText">
        <item name="android:textColor">@color/share_text_color</item>
        <item name="android:textSize">@dimen/share_item_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>
</resources>

