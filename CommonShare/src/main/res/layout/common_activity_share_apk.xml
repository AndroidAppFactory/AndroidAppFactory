<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/share_apk_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_bihe0832_share_bg_color"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/share_apk_desc_layout"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/share_apk_panel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.bihe0832.android.lib.ui.custom.view.ViewWithBackground
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            app:bgtv_backgroundColor="@color/white"
            app:bgtv_cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/share_apk_icon"
                android:layout_width="216dp"
                android:layout_height="216dp"
                android:layout_marginTop="16dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/share_apk_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/textColorPrimary"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/share_apk_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/app_desc"
                android:textColor="@color/com_bihe0832_share_text_color"
                android:textSize="12dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/share_apk_panel"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:background="@color/com_bihe0832_share_panel_color"
        android:orientation="vertical"
        android:paddingTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="通过以下方式分享应用"
            android:textColor="@color/com_bihe0832_share_text_color"
            android:textSize="@dimen/com_bihe0832_share_title_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/share_apk_panel_send_source"
                style="@style/shareItemText"
                android:drawableTop="@drawable/share_android"
                android:text="发送APK" />

            <TextView
                android:id="@+id/share_apk_panel_send"
                style="@style/shareItemText"
                android:drawableTop="@drawable/share_send"
                android:text="发送二维码" />

            <TextView
                android:id="@+id/share_apk_panel_download"
                style="@style/shareItemText"
                android:drawableTop="@drawable/share_save"
                android:text="保存二维码" />

            <TextView
                android:id="@+id/share_apk_panel_link"
                style="@style/shareItemText"
                android:drawableTop="@drawable/share_copy"
                android:text="发送下载链接" />


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
