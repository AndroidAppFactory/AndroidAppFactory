<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/BaseRlContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/share_bg_color"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/shareImagePreview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="53dp"
        android:paddingTop="?actionBarSize"
        android:paddingRight="53dp"
        android:paddingBottom="30dp"
        android:scaleType="centerInside"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/BaseSharePanel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/BaseSharePanel"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:background="@color/share_panel_color"
        android:orientation="vertical"
        android:paddingTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shareImagePreview">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="分享到"
            android:textColor="@color/share_text_color"
            android:textSize="@dimen/share_title_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/BaseShareToWeChatBtn"
                style="@style/shareItemText"
                android:drawableTop="@mipmap/share_wechat"
                android:text="微信" />

            <TextView
                android:id="@+id/BaseShareToFriendsBtn"
                style="@style/shareItemText"
                android:drawableTop="@mipmap/share_timeline"
                android:text="朋友圈" />

            <TextView
                android:id="@+id/BaseShareToQQBtn"
                style="@style/shareItemText"
                android:drawableTop="@mipmap/share_qq"
                android:text="QQ" />

            <TextView
                android:id="@+id/BaseShareToQzoneBtn"
                style="@style/shareItemText"
                android:drawableTop="@mipmap/share_qzone"
                android:text="QQ空间" />

            <TextView
                android:id="@+id/BaseShareLinkBtn"
                style="@style/shareItemText"
                android:drawableTop="@mipmap/share_link"
                android:text="复制链接" />

            <TextView
                android:id="@+id/BaseShareDownloadBtn"
                style="@style/shareItemText"
                android:drawableTop="@mipmap/share_download"
                android:text="保存图片" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
