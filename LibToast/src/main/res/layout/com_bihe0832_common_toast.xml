<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bihe0832_common_custom_toast_layout_id"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/common_toast_corner"
    android:padding="@dimen/bihe0832_common_toast_padding" >

    <ImageView
        android:layout_width="@dimen/bihe0832_common_toast_img_size"
        android:layout_height="@dimen/bihe0832_common_toast_img_size"
        android:src="@mipmap/icon"/>

    <TextView
        android:id="@+id/bihe0832_common_toastText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bihe0832_common_toast_text_margin"
        android:layout_marginRight="@dimen/bihe0832_common_toast_text_margin"
        android:clickable="false"
        android:longClickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scrollbars="vertical"
        android:maxLines="3"
        android:minLines="1"
        android:textColor="@color/bihe0832_common_toast_text_color" />

</LinearLayout>