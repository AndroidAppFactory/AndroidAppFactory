<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:animateLayoutChanges="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_file_btn_back"
            android:layout_width="22dp"
            android:layout_height="18dp"
            android:layout_margin="12dp"
            android:background="@drawable/icon_left_arrow" />

        <TextView
            android:id="@+id/activity_file_tv_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="选择文本"
            android:textColor="@color/md_theme_onPrimary"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/activity_file_btn_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:background="@drawable/icon_close"
            android:padding="8dp"
            app:tint="@color/colorOnPrimary" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/md_theme_outline" />

    <ListView
        android:id="@+id/activity_file_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:divider="@color/md_theme_outline"
        android:dividerHeight="1dp" />
</LinearLayout>
