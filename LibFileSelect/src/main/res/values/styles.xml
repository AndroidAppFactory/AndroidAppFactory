    <color name="divider">@color/gray_light</color>

    <!--页面背景色-->
    <color name="window_background">@color/white</color>
    <!--虚拟按键栏背景色-->
    <color name="navigation_bar_color">@color/black</color>


    <style name="fileActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowNoTitle">true</item>
        <!--  它可以将应用了该 Style 的 Activity 所在的 Window 设置成透明的， 使用windowIsTranslucent 的Activity 不要定义 screenOrientation-->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowActionBar">false</item>
        <!--主色调 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--控制各个控件被选中时的颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--各个控制控件的默认颜色 与colorAccent相反-->
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <!--页面背景色-->
        <item name="android:windowBackground">@color/colorWindowBg</item>
        <!--控制normal状态下button的颜色-->
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <!--控制所有可点击的View的涟漪效果颜色-->
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <!--EditText 输入框中字体的颜色-->
        <item name="editTextColor">@color/secondary_text</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>
</resources>
