<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loading_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="40dp">

    <ProgressBar
        android:id="@+id/circle_loading_bar"
        style="@style/AAFLoadingProcessStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:visibility="gone" />

    <com.bihe0832.android.lib.ui.dialog.view.ProgressIndicatorView
        android:id="@+id/dots_loading_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/loading_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:text="Loading..."
        android:textColor="@android:color/white"
        android:textSize="@dimen/com_bihe0832_dialog_content_text_size"
        android:visibility="visible" />

</LinearLayout>


