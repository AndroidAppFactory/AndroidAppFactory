<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseDialog" parent="@android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <!-- 设置这个属性后，dialog周边的一圈黑边就可以消失了-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--  对话框的背景颜色 -->
        <item name="android:background">@android:color/transparent</item>
        <!--是否允许对话框的背景变暗-->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 遮罩层, 对话框的背景变暗的程度，值越大，背景就越暗 -->
        <item name="android:backgroundDimAmount">0.5</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上，true 居中展示-->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>

        <!--输入框适配-->
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:textColorPrimary">@color/dialog_text</item>
        <item name="android:textColorSecondary">@color/dialog_text</item>
        <item name="android:textColorHint">@color/dialog_hint</item>
        <item name="android:textColorHintInverse">@color/dialog_hint</item>
    </style>

    <color name="dialog_bg">#FFFFFF</color>
    <color name="dialog_text">#202020</color>
    <color name="dialog_hint">#333333</color>
    <color name="dialog_button">#333333</color>
    <color name="dialog_tips">@color/select_state_pressed</color>
    <color name="dialog_split">#EEEEEE</color>

    <dimen name="dialog_title_text_size">16dp</dimen>
    <dimen name="dialog_content_text_size">12dp</dimen>
    <dimen name="dialog_tips_text_size">10dp</dimen>
    <dimen name="dialog_button_text_size">@dimen/dialog_content_text_size</dimen>

</resources>
