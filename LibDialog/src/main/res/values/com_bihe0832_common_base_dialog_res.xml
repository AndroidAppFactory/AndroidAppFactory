<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseDialog" parent="@android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <!-- 设置这个属性后，dialog周边的一圈黑边就可以消失了-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--  对话框的背景颜色 -->
        <item name="android:background">@android:color/transparent</item>
        <!--是否允许对话框的背景变暗-->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 遮罩层, 对话框的背景变暗的程度，值越大，背景就越暗 -->
        <item name="android:backgroundDimAmount">0.5</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上，true 居中展示-->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>

        <!--输入框适配-->
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:textColorPrimary">@color/com_bihe0832_dialog_title</item>
        <item name="android:textColorSecondary">@color/com_bihe0832_dialog_content</item>
        <item name="android:textColorHint">@color/com_bihe0832_dialog_hint</item>
        <item name="android:textColorHintInverse">@color/com_bihe0832_dialog_hint</item>
    </style>

    <color name="com_bihe0832_dialog_bg">#FFFFFF</color>
    <color name="com_bihe0832_dialog_title">#202020</color>
    <color name="com_bihe0832_dialog_content">#666666</color>
    <color name="com_bihe0832_dialog_hint">#333333</color>
    <color name="com_bihe0832_dialog_button">#333333</color>
    <color name="com_bihe0832_dialog_tips">@color/com_bihe0832_select_state_pressed</color>
    <color name="com_bihe0832_dialog_split">#EEEEEE</color>

    <dimen name="com_bihe0832_dialog_title_text_size">16dp</dimen>
    <dimen name="com_bihe0832_dialog_content_text_size">12dp</dimen>
    <dimen name="com_bihe0832_dialog_tips_text_size">10dp</dimen>
    <dimen name="com_bihe0832_dialog_button_text_size">14dp</dimen>

    <string name="dialog_title">温馨提示</string>
    <string name="dialog_button_cancel">取消</string>
    <string name="dialog_button_settings">设置</string>
    <string name="dialog_button_retry">重试</string>
    <string name="dialog_button_close">关闭</string>
    <string name="dialog_button_ok">确认</string>
    <string name="dialog_input_hint">输入完成后点击确认提交</string>

</resources>
