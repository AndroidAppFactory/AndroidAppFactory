<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/com_bihe0832_common_dialog_bg">

    <TextView
            android:id="@+id/dialog_title"
            android:layout_width="0dp"
            app:layout_constrainedWidth="true"
            android:layout_height="wrap_content"
            android:textColor="@color/corner_color"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:text="系统消息" />

    <TextView
            android:id="@+id/dialog_content"
            android:layout_width="0dp"
            app:layout_constrainedWidth="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:lineSpacingMultiplier="1.75"
            android:scrollbars="vertical"
            android:textSize="14dp"
            android:textColor="@color/corner_color"
            app:layout_constraintTop_toBottomOf="@+id/dialog_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="提示消息提示消息提示消息提示消息提示消息提示消息提示消息提示消息提示消息提示消息提示消息提示消息提示消息提示消息提示消息提示消息" />

</android.support.constraint.ConstraintLayout>
