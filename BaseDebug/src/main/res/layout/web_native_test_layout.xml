<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/red_dot"
    android:padding="50dp">

    <com.bihe0832.android.base.debug.webview.CuntomRecycleView
        android:id="@+id/test_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:padding="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/cover"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/primary_dark"
        app:layout_constraintEnd_toEndOf="@+id/test_list"
        app:layout_constraintStart_toStartOf="@+id/test_list"
        app:layout_constraintTop_toBottomOf="@+id/test_list" />
</androidx.constraintlayout.widget.ConstraintLayout>
