<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresh_notification_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/refresh_notification_logo"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon" />

        <TextView
            android:id="@+id/refresh_notification_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textSize="12dp"
            tools:text="子勰Lib • 通知二级标题 • 10分钟前" />
    </LinearLayout>

    <TextView
        android:id="@+id/refresh_notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/refresh_notification_sub_title"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="4dp"
        android:singleLine="true"
        android:textSize="14dp"
        android:textStyle="bold"
        tools:text="腾讯手游加速器正为您加速" />

    <TextView
        android:id="@+id/refresh_notification_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/download_notification_title"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="12dp"
        tools:text="中间的点怎么打？目录的点名字中间的圆点怎么打？ - 符号库中间的点怎么打？目录的点名字中间的圆点怎么打？ - 符号库" />

</LinearLayout>
