<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_bihe0832_dialog_bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/takePhotoBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/common_photo_take_photo"
        android:textColor="@color/com_bihe0832_dialog_title"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/divider" />


    <TextView
        android:id="@+id/choosePhotoBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/common_photo_choose_photo"
        android:textColor="@color/com_bihe0832_dialog_title"
        android:textSize="14sp" />

</LinearLayout>