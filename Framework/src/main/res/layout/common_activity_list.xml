<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/common_activity_bg"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/common_activity_list_toolbar"
        style="@style/frameWorkAppTheme.Toolbar.Light"
        app:title="服务" />

    <com.bihe0832.android.lib.ui.recycleview.ext.MyEasyRefreshLayout
        android:id="@+id/common_activity_list_refresh"
        android:background="@color/common_content_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/common_activity_list_info_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false" />
    </com.bihe0832.android.lib.ui.recycleview.ext.MyEasyRefreshLayout>

</LinearLayout>